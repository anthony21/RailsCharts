<%= link_to @url, class: 'xl:flex-1 relative group rounded-lg w-96 max-w-xs mb-10 xl:mr-10' do %>
    <div class="relative transition-all duration-500 group-hover:transform-gpu group-hover:scale-110 rounded-lg bg-gradient-<%= @index %> overflow-hidden flex items-center justify-center">
      <%= image_tag 'dashboard/grid.png', class: 'absolute top-0 left-0 opacity-50' %>
  
      <%= image_tag @image, class: 'transition-all duration-500 w-5/6 mt-12 mb-32 mx-auto opacity-80 group-hover:opacity-100' %>
  
      <div class="absolute bottom-8 left-8 text-white opacity-90 group-hover:opacity-100 transition-all duration-500">
        <div class="text-xl font-black uppercase w-24 leading-5"><%= @title %></div>
        <div class="text-sm mt-2"><%= @description %></div>
      </div>
  
      <span class="pointer-events-none absolute top-6 right-6 text-white opacity-75 transition-all duration-500 group-hover:opacity-100" aria-hidden="true">
        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20 4h1a1 1 0 00-1-1v1zm-1 12a1 1 0 102 0h-2zM8 3a1 1 0 000 2V3zM3.293 19.293a1 1 0 101.414 1.414l-1.414-1.414zM19 4v12h2V4h-2zm1-1H8v2h12V3zm-.707.293l-16 16 1.414 1.414 16-16-1.414-1.414z" />
        </svg>
      </span>
    </div>
  <% end %>
  