<div class="h-full bg-gray-100 dark:bg-gray-1000 flex items-center justify-center relative">
  <%= image_tag 'dashboard/grid.png', class: 'filter invert dark:invert-0 absolute top-0 left-0 opacity-25' %>

  <%= cards_card class: 'w-full md:w-2/3 lg:w-1/2 2xl:w-1/3 3xl:w-1/4 p-16' do %>
    <div class="p-10">
      <%= inline_svg_tag 'via.svg', class: 'h-6 w-auto text-gray-800 dark:text-white fill-current', alt: 'VIA' %>

      <h2 class="mt-6 text-xl font-bold text-gray-900 dark:text-gray-200"><%= @title %></h2>

      <% if subtitle.present? %>
        <p class="text-sm text-gray-600 dark:text-gray-400 max-w">
          <%= subtitle %>
        </p>
      <% end %>

      <div class="mt-6">
        <%= render 'flash_messages' %>

        <%= content %>
      </div>

      <div class="mt-4">
        <%= footer %>
      </div>
    </div>
  <% end %>
</div>
